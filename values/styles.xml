<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--自定义对话框样式，去边框，无标题，背景透明-->
    <style name="dialog_custom" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


<style name="warpcontent">
    <item name="android:layout_weight">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
</style>

<style name="textview16sp" parent="warpcontent">
    <item name="android:textSize">16sp</item>
    <item name="android:gravity">center_vertical</item>
</style>

<!--14sp-->
    <style name="textview14sp" parent="warpcontent">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>



</resources>
